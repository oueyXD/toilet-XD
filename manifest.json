{
    "manifest_version": 3,
    "name": "SKIBIDI TOILET",
    "version": "1.0",
    "description": "Don't forget to flush! >:)",
    "permissions": [
        "activeTab",
        "scripting" 
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html"}

}
