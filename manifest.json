{
    "manifest_version": 3,
    "name": "SKIBIDI TOILET",
    "version": "1.0",
    "description": "Don't forget to flush! >:)",
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png", 
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png", 
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    }
}
